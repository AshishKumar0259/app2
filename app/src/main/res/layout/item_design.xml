<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp">

        <LinearLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:cardCornerRadius="70dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp">

                <ImageView
                    android:id="@+id/fish_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tuna" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/fish_name_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fish\nName"
                        android:textColor="?android:textColor"
                        android:textSize="16sp"

                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/fish_name_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fish Name"
                        android:gravity="end"
                        android:textColor="?android:textColor"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/fish_cmn_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Common\nNames"
                        android:textColor="?android:textColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/fish_cmn_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Common Names"
                        android:gravity="end"
                        android:textColor="?android:textColor"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/fish_dist_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distribution\nArea"
                        android:textColor="?android:textColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fish_dist_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="Distribution Area"
                        android:textColor="?android:textColor"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card">



    </androidx.cardview.widget.CardView>


</RelativeLayout>